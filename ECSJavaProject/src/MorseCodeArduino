  dash();
}

void doV()
{
  dot();
  dot();
  dot();
  dash();
}

void doW()
{
  dot();
  dash();
  dash();
}

void doX()
{
  dash();
  dot();
  dot();
  dash();
}

void doY()
{
  dash();
  dot();
  dash();
  dash();
}

void doZ()
{
  dash();
  dash();
  dot();
  dot();
}
